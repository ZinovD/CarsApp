@model CarsApp.Data.Models.Brands

<form method="post" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h4>Изменение марки автомобиля</h4>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt></dt>
                <dd>
                    <input type="number" hidden asp-for="@Model.Id"/>
                </dd>
                <dt>Название:</dt>
                <dd>
                    <input type="text" value="@Model.Name" asp-for="Name" /><br />
                </dd>
                <dt>Статус</dt>
                <dd>
                    <input type="checkbox" asp-for="Active"/><br />
                </dd>
            </dl>
            </dl>
            <div class="modal-footer">
                <input class="btn btn-success" type="submit" value="Готово" />
                <button class="btn btn-secondary" asp-controller="Home" asp-action="Index">Закрыть</button>
            </div>
        </div>
    </div>
</form>